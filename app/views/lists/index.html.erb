<%# banner %>
<div class="home-banner" style="background-image: url('<%= image_path "https://res.cloudinary.com/cindyscloudinary/image/upload/v1621879441/szrz2cyt8d1y7rezrfjx.jpg", alt: "hero image" %>'); " >
  <strong><h1>Save Any Movie You Like</h1></strong>
  <p>
    <span id="banner-typed-text"></span>
  </p>
</div>
<%# banner END %>

<%# Text section %>
<div class="container mt-5 mb-4">
  <div class="row justify-content-center text-center">
    <div class="col-8">
      <%= "For all movie lovers, this site allows you to create list and bookmark your favorite movies in it. Feel free to leave the comments, we would love to hear your feedback on all the lists" %>
    </div>
  </div>
</div>
<%# Text section END %>


<div class="container ">
  <br>
    <h3 class="text-center">All Lists</h3>
  <br>

  <%# list Card %>
  <div class="row no-gutters">
    <% @lists.each do |list| %>
    <div class="col-sm-12 col-md-6 col-lg-4 p-2">   
      <div class="card">
        <img class="card-img-top" src="https://picsum.photos/id/16/300/200" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%# list Card END %>



  <br>

  <!-- Button: add new list -->
  <button type="button" class="btn btn-primary ">
    <%= link_to '+ add a new list', new_list_path, class: "text-white" %>
  </button>
  <!-- Button: add new list END -->

</div>


<br><br>
<%# Footer %>
<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    This site is made with <i class="fas fa-heart"></i> from Cindy
  </div>
</div>
<%# Footer END %>