<%# Text section %>
<div class="container mt-5 mb-4">
  <div class="row justify-content-center text-center">
    <div class="col-8">
      <%= "For all movie lovers, this site allows you to create list and bookmark your favorite movies in it. Feel free to leave the comments, we would love to hear your feedback on all the lists" %>
    </div>
  </div>
</div>
<%# Text section END %>


<div class="container m-auto ">
  <br>
    <h3 class="text-center">All Lists</h3>
  <br>

  <%# list Card %>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 colsm-6 col-md-4 p-2">   
        <%= link_to list_path(list), class:'text-decoration-none' do %>
          <div class="card-category" data-aos="zoom-in" style="background-image:linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : asset_path('list_background.jpg') %>)" >
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <%# list Card END %>


  <br>



  <!-- Button: add new list -->
  <button type="button" class="btn btn-primary ">
    <%= link_to '+ add a new list', new_list_path, class: "text-white" %>
  </button>

  <!-- Button: add new list END -->

</div>


