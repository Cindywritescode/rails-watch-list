<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white py-5 px-4 shadow card-rounded">

        <h3 class="text-uppercase">Create a new list</h3>

        <%= simple_form_for @list do |f| %>
          <%= f.input :name, placeholder: 'Drama' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-primary form-btn-rounded' %>
        <% end %>
      
      </div>
    </div>
  </div>
</div>

